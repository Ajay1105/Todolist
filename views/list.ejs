<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="styles.css">
    <title>Day of week</title>
    <link rel="shortcut icon" href="https://www.vhv.rs/dpng/d/447-4472951_todo-list-icon-do-list-icon-hd-png.png" type="image/x-icon">
</head>

<body>

    <div class="box" id="heading">
        <h1>
            <%=today%>
        </h1>
    </div>
    <div class="box">
        <% for(var i=0; i<inputData.length ;i++){%>
        <div class="item">
        <% if(today==="Work List" ){ %>
                <input type="checkbox">
                <p>
                    <%=inputData[i].name%>
                </p>
        <% }else {%>
        <form class="item" action="/delete" method="post" >
            <input type="checkbox" name="checkbox" value="<%=inputData[i]._id%>" onChange="this.form.submit()">
                <p>
                    <%=inputData[i].name%>
                </p>
         </form>
        <% } %>
        </div>
        <% } %>
        <form class="item" id="form" action="" method="post">
            <input type="text" name="newItem" placeholder="New Item">
            <button type="submit" name="button">+</button>
        </form>
    </div>
    <% if(today==="Work List" ){ %>
        <a href="/"><button class="routeBtn">Home</button></a>
    <% }else {%>
        <a href="/work"><button class="routeBtn">Work List</button></a>
    <% } %>
</body>
</html>